{
  "name": "auth",
  "description": "Boilerplate to handle authentication to easily implement authentication on multiple applications.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "db:reset": "npm run db:cleanup && npm run db:schema && npm run db:triggers",
    "db:schema": "export $(xargs < .env) && psql -f scripts/schema.sql $DB_CONNECTION_STRING",
    "db:triggers": "export $(xargs < .env) && psql -f scripts/triggers.sql $DB_CONNECTION_STRING",
    "db:cleanup": "export $(xargs < .env) && psql -f scripts/cleanup.sql $DB_CONNECTION_STRING",
    "test": "mocha --require @babel/register --require src/alias.js --require dotenv/config --exit tests/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datnguyen1215/auth.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/datnguyen1215/auth/issues"
  },
  "homepage": "https://github.com/datnguyen1215/auth#readme",
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.4",
    "axios": "^1.6.8",
    "chai": "^4.4.1",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.5"
  }
}
